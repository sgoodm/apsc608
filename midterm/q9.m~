

% midterm question 9
% coleman 11.3

clear;
close all;

L = 1;
xstep = 0.2;
x = 0:xstep:L;

% part b

tstep = 0.02;
tend = 0.16;
t = 0:tstep:tend;

results = zeros(length(x), length(t));

for tx = 1:length(t)
    j = tx - 1;
    tj = t(tx);
    for xx = 1:length(x)
        i = xx - 1;
        xi = x(xx);
        if xi == 0 || xi == L
            results(xx, tx) = 0;
        elseif tj == 0
            results(xx, tx) = sin(pi*xi);
        else
            disp(xx);
            disp(tx);
            results(xx, tx) = 0.5 * (results(xx-1, tx-1) + results(xx+1, tx-1));
        end
    end
end

array2table(results, 'RowNames', num2cells(x), 'VariableNames', num2cell(t));


% part c

tstep = 0.08;
tend = 0.16;
t = 0:tstep:tend;



% going to be unstable due to tstep
% xstep / tstep^2 should be <= 0.5
% 0.2 / 0.08^2 = 31.25






